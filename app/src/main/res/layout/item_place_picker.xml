<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="64dp"
    android:background="?android:attr/selectableItemBackground"
    android:padding="16dp">

    <ImageView
        android:id="@+id/placePickerCategoryIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/placePickerItemName"
        android:layout_toEndOf="@+id/placePickerItemName"
        android:paddingTop="3dp" />

    <TextView
        android:id="@+id/placePickerItemName"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/placePickerItemRating"
        android:layout_marginStart="45dp"
        android:ellipsize="end"
        android:fadingEdge="horizontal"
        android:maxLines="1"
        android:text="Venue Name"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/placePickerItemAddress"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/placePickerItemName"
        android:layout_below="@+id/placePickerItemName"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="address"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/placePickerItemRating"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:elevation="1dp"
        android:padding="8dp"
        android:text="Rating"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/placePickerItemDistance"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/placePickerItemAddress"
        android:layout_alignParentEnd="true"
        android:layout_alignRight="@id/placePickerItemRating"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="101dp"
        android:text="dx"
        android:textAlignment="viewEnd"
        android:textSize="12sp"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/placePickerFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/placePickerCategoryIcon"
        android:layout_marginRight="50dp"
        android:layout_marginTop="-5dp"
        android:visibility="invisible"
        app:srcCompat="@android:drawable/btn_star_big_on" />

</RelativeLayout>