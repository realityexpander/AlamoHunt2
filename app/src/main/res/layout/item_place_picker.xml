<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="64dp"
    android:background="?android:attr/selectableItemBackground"
    android:padding="16dp">

    <ImageView
        android:id="@+id/placePickerCategoryIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/placePickerItemName"
        android:layout_toEndOf="@+id/placePickerItemName"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/placePickerItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/placePickerItemRating"
        android:layout_marginStart="48dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Venue Name"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/placePickerItemAddress"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/placePickerItemName"
        android:layout_below="@+id/placePickerItemName"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="address" />

    <TextView
        android:id="@+id/placePickerItemRating"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:elevation="1dp"
        android:padding="8dp"
        android:text="Rating"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/placePickerItemDistance"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@id/placePickerItemRating"
        android:text="dx"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/placePicketCategoryIcon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/placePickerItemName"
        android:layout_toEndOf="@+id/placePickerItemName"
        app:srcCompat="@android:drawable/btn_star_big_on" />

</RelativeLayout>